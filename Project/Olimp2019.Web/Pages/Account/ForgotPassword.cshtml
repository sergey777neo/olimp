@page
@model ForgotPasswordModel
@{
	ViewData["Title"] = "Забыли пароль?";
}

<div class="login-page forgot-password-page">
	<span class="login-page__title">@ViewData["Title"]</span>
	<span class="login-page__after-title">Введите ваш e-mail</span>
	<form method="post">
		<div class="field light-font">
			<input asp-for="Input.Email" class="form-control" />
			<label asp-for="Input.Email"></label>
			<span asp-validation-for="Input.Email" class="text-danger"></span>
		</div>
		<div class="medium-font">
			<button type="submit" class="login-page__login-button">Отправить</button>
		</div>
		<div class="text-danger">
			<div asp-validation-summary="ModelOnly"></div>
		</div>
	</form>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
