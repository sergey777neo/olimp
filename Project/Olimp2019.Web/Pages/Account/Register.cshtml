@page
@model RegisterModel

<div class="login-page register-page">
	<span class="login-page__title">Регистрация</span>
	<span class="login-page__after-title">Зарегестрируйтесь, чтобы начать игру</span>
	<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
		<div class="field light-font">
			<input asp-for="Input.FullName" class="form-control" />
			<label asp-for="Input.FullName"></label>
			<span asp-validation-for="Input.FullName" class="text-danger"></span>
		</div>
		<div class="field light-font">
			<input asp-for="Input.Email" class="form-control" />
			<label asp-for="Input.Email"></label>
			<span asp-validation-for="Input.Email" class="text-danger"></span>
		</div>
		<div class="field light-font">
			<input asp-for="Input.Password" class="form-control" />
			<label asp-for="Input.Password"></label>
			<span asp-validation-for="Input.Password" class="text-danger"></span>
		</div>
		<div class="field light-font">
			<input asp-for="Input.ConfirmPassword" class="form-control" />
			<label asp-for="Input.ConfirmPassword"></label>
			<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
		</div>
		<div class="form-group light-font text-right">
			<a asp-page="./Login">Уже есть аккаунт</a>
		</div>
		<div class="medium-font">
			<button type="submit" class="login-page__login-button">Начать игру</button>
		</div>
		<div class="text-danger">
			<div asp-validation-summary="ModelOnly"></div>
		</div>
	</form>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
